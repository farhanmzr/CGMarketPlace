                        android:fontFamily="@font/montserrat"
                        android:gravity="end"
                        android:text="238 cm"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginStart="8dp"
                        android:gravity="end"
                        android:text="H"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="end"
                        android:text="80 cm"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="end"
                        android:text="D"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_dense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="end"
                        android:text="75 cm"
                        android:textSize="12sp" />

                </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0"
                    android:layout_marginTop="8dp">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/material"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_material"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:gravity="end"
                        android:text="Tabac"
                        android:textSize="12sp" />

                </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0"
                    android:layout_marginTop="8dp">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/finishing"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_finishing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:gravity="end"
                            android:text="Ascari - Pearl"
                            android:textSize="12sp" />

                    </TableRow>

                </TableLayout>



            </LinearLayout>

        </LinearLayout>

